{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/get-started/index.jsx",
    "app/_layout.tsx",
    "app/index.js",
    "app/(tabs)/home/_layout.jsx",
    "nativewind-env.d.ts",
    "app/signup/index.jsx"
  ]
}
